@model OstadYarProject.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1>
                        <strong>نرم افزار استادیار</strong>
                    </h1>
                    <div class="description">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>به سیستم استادیار وارد شوید</h3>
                            <p>برای وارد شدن نام کاربری و رمزعبور را وارد کنید</p>
                        </div>
                        <div class="row">
                            <div>
                                <span>@Html.ValidationMessage("ErrorMessage", new { @class = "text-danger" })</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="" method="post" class="login-form">
                            <div class="form-group">
                                <label class="sr-only" for="form-username">نام کاربری</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-username form-control", id = "form-username", name = "form-username", placeholder = "Username..." })
                                @Html.ValidationMessageFor(m => m.UserName, String.Empty, new { @class = "text-danger", @style = "font-size: smaller" })
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-password">رمز عبور</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-password form-control", name = "form-password", id = "form-password", placeholder = "Password..." })
                                @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @class = "text-danger", @style = "font-size: smaller" })
                            </div>
                            <button type="submit" class="btn">!وارد شوید</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 social-login">
                    <h3>...یا ثبت نام کنید </h3>
                    <div class="social-login-buttons">
                        <a class="btn btn-link-2" href="@Url.Action("SignUp", "Home")">
                           ثبت نام
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>

}